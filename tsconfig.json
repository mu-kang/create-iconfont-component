{
	"compilerOptions": {
		"module": "NodeNext",
		"noImplicitAny": false,
		"target": "es6",
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "lib",
		"noEmit": false,
		"moduleResolution": "nodenext",
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"composite": true,
		"resolveJsonModule": true,
		"rootDir": "./src"
	},
	"include": ["./src/**/*", "./src/**/*.json"],
	"exclude": ["node_modules"]
}
